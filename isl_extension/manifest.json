{
  "manifest_version": 3,
  "name": "ISL Assistant for YouTube (Demo)",
  "version": "1.0",
  "description": "Convert text in YouTube videos into Indian Sign Language animations. (Prototype)",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }